<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Setting_Item_Commons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:paddingLeft">@dimen/setting_item_left_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_setting_middle_items_selector</item>
    </style>

    <style name="Setting_With_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@drawable/bg_setting_text_color_selector</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Setting_Divider_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/common_header_blue</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_left_padding</item>
        <item name="android:layout_marginRight">@dimen/setting_item_right_padding</item>
    </style>
</resources>
